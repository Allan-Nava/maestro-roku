{
  "extends": "bsconfig.json",
  "files": [
    "manifest",
    "source/**/*.*",
    "images/**/*.*",
    "sounds/**/*.*",
    "fonts/**/*.*",
    "components/**/*.*",
    "meta/**/*.*",
    "!**/*.spec.bs"
  ],
  "plugins": ["roku-log-bsc-plugin", "maestro-roku-bsc-plugin"],
  "maestro": {
    "excludeFilters": ["**/roku_modules/**/*", "**/rooibos/**/*"],
    "buildForIDE": false
  },
  "rokuLog": {
    "strip": true
  },
  "createPackage": true
}
