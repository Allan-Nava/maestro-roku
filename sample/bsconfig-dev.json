{
  "extends": "bsconfig.json",
  "files": [
    "manifest",
    "source/**/*.*",
    "images/**/*.*",
    "sounds/**/*.*",
    "fonts/**/*.*",
    "components/**/*.*",
    "meta/**/*.*",
    "!**/*.spec.bs"
  ],
  "plugins": ["maestro-roku-bsc-plugin", "roku-log-bsc-plugin"],
  "rokuLog": {
    "strip": false,
    "insertPkgPath": true
  },
  "maestro": {
    "excludeFilters": ["**/roku_modules/**/*", "**/rooibos/**/*"],
    "buildForIDE": false
  },
  "sourceMap": true
}
