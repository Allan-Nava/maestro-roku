{
  "stagingFolderPath": "build",
  "files": ["manifest", "source/**/*.*", "components/**/*.*"],
  "extends": "bsconfig.json",
  "plugins": ["maestro-roku-bsc-plugin", "rooibos-roku"],
  "rooibos": {
    "tags": ["!integration", "!deprecated", "!fixme"],
    "lineWidth": 70
  },
  "rokuLog": {
    "strip": false,
    "insertPkgPath": true
  },
  "maestro": {
    "excludeFilters": ["**/roku_modules/**/*", "**/rooibos/**/*"]
  }
}
